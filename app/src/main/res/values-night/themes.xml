<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Расходы" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_n</item>
        <item name="colorPrimaryVariant">@color/primary_n</item>
        <item name="colorOnPrimary">@color/on_primary_n</item>
        <item name="colorPrimaryContainer">@color/primary_container_n</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_n</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_n</item>
        <item name="colorSecondaryVariant">@color/secondary_n</item>
        <item name="colorOnSecondary">@color/on_secondary_n</item>
        <item name="colorSecondaryContainer">@color/secondary_container_n</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_n</item>
        <!-- Tertiary brand colors. -->
        <item name="colorTertiary">@color/tertiary_n</item>
        <item name="colorOnTertiary">@color/on_tertiary_n</item>
        <item name="colorTertiaryContainer">@color/tertiary_container_n</item>
