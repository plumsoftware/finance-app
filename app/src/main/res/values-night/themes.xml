        <!-- Neutral brand colors. -->
        <item name="android:colorBackground">@color/background_n</item>
        <item name="colorOnBackground">@color/on_background_n</item>
        <item name="colorSurface">@color/surface_n</item>
        <item name="colorOnSurface">@color/on_surface_n</item>
        <item name="colorOutline">@color/outline_n</item>
        <item name="colorSurfaceVariant">@color/surface_variant_n</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_n</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/colorSecondaryContainer</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
